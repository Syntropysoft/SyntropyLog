{
  "compilerOptions": {
    /* Opciones B치sicas de M칩dulo y Target */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Rutas y Estructura */
    "rootDir": "src",

    /* Opciones de Declaraci칩n */
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "sourceMap": true,

    /* Strictness y Calidad de C칩digo */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "tests/cli/cli.test.ts"],
  "exclude": ["node_modules", "dist", "tests", "examples"]
}
